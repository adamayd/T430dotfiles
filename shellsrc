# Aliases
alias ls='ls -lhA --group-directories-first --color'
alias ll='echo USE LS ASSHOLE'
alias mutt='neomutt'
alias vi='vim'

# Enviroment Variables
export EDITOR='vim'

# SSH
if [ -e $HOME/.sshrc ]; then
    source ~/.sshrc
fi

# Node Version Manager (NVM)
if [ -e $HOME/.nvmrc ]; then
    source ~/.nvmrc
fi

# Add .NET Core SDK tools
export PATH="$PATH:/home/adam/.dotnet/tools"
export ASPNETCORE_ENVIRONMENT=development

# Ruby 
export PATH="$(ruby -e 'print Gem.user_dir')/bin:$PATH:$HOME/.yarn/bin"
export GEM_HOME=$(ruby -e 'print Gem.user_dir')
