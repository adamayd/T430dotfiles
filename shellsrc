# Aliases
alias ls='ls -lhA --group-directories-first --color'
alias ll='echo USE LS ASSHOLE'
alias mutt='neomutt'
alias vi='vim'
alias psg="ps -aux | grep -v grep | grep "

# Enviroment Variables
export EDITOR='vim'

# SSH
if [ -e $HOME/.sshrc ]; then
    source $HOME/.sshrc
fi

# Node Version Manager (NVM)
if [ -e $HOME/.nvmrc ]; then
    source $HOME/.nvmrc
fi

## ASDF Version Manager
if [ -e $HOME/.asdfrc ]; then
    source $HOME/.asdfrc
fi

## Ruby 
if [ -e $HOME/.rubyrc ]; then
    source $HOME/.rubyrc
fi

. /usr/lib64/python3.6/site-packages/powerline/bindings/bash/powerline.sh
